{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["node", "jest"],
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "noEmit": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/__tests__/**/*",
    "src/types/**/*"
  ],
  "exclude": ["node_modules", "dist"]
} 